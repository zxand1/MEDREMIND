{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Isso pode melhorar o desempenho
    "forceConsistentCasingInFileNames": true, // Ajuda a evitar problemas de nome de arquivos
    "jsx": "react-native",
    "noEmit": true, // Não gera arquivos JavaScript
    "resolveJsonModule": true, // Permite importar arquivos JSON diretamente
    "isolatedModules": true // Ajuda na análise estática de tipos
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}






